<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.washmywhip.washmywhip.SignUpActivity"
    android:background="@drawable/darkrain">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logogrey"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Username"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:id="@+id/usernameSignup"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:text="Password"
            android:id="@+id/passwordSignup"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:text="Re-enter Password"
            android:id="@+id/reenterPasswordSignup"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                android:text="Email"
                android:id="@+id/emailSignup"/>

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                android:text="Phone"
                android:id="@+id/phoneSignup"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                android:text="First Name"
                android:id="@+id/firstNameSignup"/>

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                android:text="Last Name"
                android:id="@+id/lastNameSignup"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_marginTop="20dp"
            android:id="@+id/signupSignup"/>

    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/cancelSignup"/>


</RelativeLayout>
